generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model EventTicket {
  id           String   @id @default(cuid())
  ticketId     String   @unique
  fullName     String
  email        String
  phone        String
  ticketType   String
  ticketPrice  String
  reference    String
  status       String   @default("VALID")
  purchaseDate DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Nomination {
  id               String   @id
  nomineeName      String
  category         String
  description      String
  nomineeEmail     String?
  nomineePhone     String?
  nomineeWhatsApp  String?
  nomineeTwitter   String?
  nomineeLinkedIn  String?
  nomineeInstagram String?
  nominatorName    String
  nominatorEmail   String
  status           String   @default("PENDING")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Nominee {
  id           String   @id
  name         String
  category     String
  bio          String
  image        String?
  nominationId String?  @unique
  isVisible    Boolean  @default(false)
  votesCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Vote         Vote[]
}

model Popup {
  id         String   @id
  title      String
  body       String
  ctaText    String?
  ctaLink    String?
  targetPage String   @default("all")
  duration   Int      @default(5000)
  isEnabled  Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model StandBooking {
  id             String   @id @default(cuid())
  bookingId      String   @unique
  orgName        String
  contactName    String
  email          String
  phone          String
  standType      String
  natureOfBusiness String?
  notes          String?
  status         String   @default("Pending")
  submissionDate DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Partnership {
  id              String   @id @default(cuid())
  companyName     String
  contactPerson   String
  email           String
  phone           String
  partnershipType String
  message         String
  status          String   @default("Pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Ticket {
  id               String         @id
  ticketNumber     String         @unique
  userId           String
  ticketCategoryId String
  status           String         @default("VALID")
  purchaseDate     DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  category         TicketCategory @relation(fields: [ticketCategoryId], references: [id])
  user             User           @relation(fields: [userId], references: [id])
}

model TicketCategory {
  id          String   @id
  name        String
  price       Float
  description String?
  capacity    Int
  sold        Int      @default(0)
  isEnabled   Boolean  @default(true)
  features    String[] @default([])
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     Ticket[]
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Vote {
  id         String   @id @default(cuid())
  nomineeId  String
  categoryId String
  voterIp    String?
  voterEmail String?
  createdAt  DateTime @default(now())
  Nominee    Nominee  @relation(fields: [nomineeId], references: [id])
}

model Activity {
  id          String   @id @default(cuid())
  title       String
  description String
  type        String   @default("info") // success, error, warning, info, edit
  createdAt   DateTime @default(now())
}

model Speaker {
  id        String   @id @default(cuid())
  name      String
  title     String
  bio       String
  topic     String
  image     String?
  twitter   String?
  linkedin  String?
  facebook  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id            String   @id @default(cuid())
  reference     String   @unique
  email         String
  fullName      String
  phone         String
  amount        Float
  ticketType    String
  status        String   @default("PENDING") // PENDING, SUCCESS, FAILED
  provider      String   @default("PAYSTACK")
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Volunteer {
  id                String   @id @default(cuid())
  fullName          String
  email             String
  phone1            String
  state             String
  lga               String
  phone2            String // WhatsApp
  unitSection       String // PRODUCT or SERVICE
  unitSubSection    String // e.g., Graphics & Creative Design
  whyVolunteer      String
  availableWorkshop Boolean
  unavailableWhy    String?
  status            String   @default("PENDING")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Ambassador {
  id                  String   @id @default(cuid())
  fullName            String
  email               String
  phone1              String
  state               String
  lga                 String
  phone2              String // WhatsApp
  status              String // Professional/Graduate or Undergraduate
  institution         String?
  outsideLagosInst    String?
  profGraduateInfo    String?
  availableActivation Boolean
  unavailableWhy      String?
  applicationStatus   String   @default("PENDING")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  order     Int      @default(0)
  isEnabled Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VolunteerUnit {
  id        String   @id @default(cuid())
  section   String   // PRODUCT or SERVICE
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Institution {
  id        String   @id @default(cuid())
  name      String
  isLagos   Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AmbassadorStatus {
  id        String   @id @default(cuid())
  label     String
  category  String   // Academic or Legacy
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
